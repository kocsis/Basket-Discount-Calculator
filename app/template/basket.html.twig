<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
<section class="jumbotron text-center">
	<div class="container">
		<h1 class="jumbotron-heading">Basket Discount Calculator</h1>
	</div>
</section>

<form>
    <div class="container mb-4">
        <div class="row">
            <div class="col-12">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 40%" scope="col">Termék név</th>
                                <th style="width: 40%" scope="col" class="text-center">Mennyiség</th>
                                <th scope="col" class="text-right">Termék ár (1 darab)</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for product in products %}
                            <tr>
                                <td>{{product.name}}</td>
                                <td><input class="form-control" name="quantity[{{product.name}}]" type="number" value="{{product.quantity}}" /></td>
                                <td class="text-right">{{product.price}} Ft</td>
                            </tr>
                            {% endfor %}
                            <tr>
                                <td></td>
                                <td class="text-right">Ár:</td>
                                <td class="text-right">{{subTotal}} Ft</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td class="text-right">Kedvezmény összege:</td>
                                <td class="text-right">{{discount}} Ft</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td class="text-right">Kedvezmény típus:</td>
                                <td class="text-right">{{discountType}}</td>
                            </tr>
                            <tr>
                                <td></td>
                                <td class="text-right"><strong>Végösszeg:</strong></td>
                                <td class="text-right"><strong>{{total}} Ft</strong></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col mb-2">
                <div class="row">
                    <div class="col-sm-12 col-md-12 text-right">
                        <button class="btn btn-lg btn-block btn-success text-uppercase">Ár kiszámítása</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
